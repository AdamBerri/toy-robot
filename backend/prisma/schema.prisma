generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model RobotPositionHistory {
  id        Int         @id @default(autoincrement())
  x         Int
  y         Int
  facing    Facing
  command   CommandType
  createdAt DateTime    @default(now())
}

enum Facing {
  NORTH
  EAST
  SOUTH
  WEST
}

enum CommandType {
  PLACE
  MOVE
  LEFT
  RIGHT
}
